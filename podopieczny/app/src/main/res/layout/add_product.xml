<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/add_product_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddProductActivity">

    <EditText
        android:id="@+id/et_dialog_nazwa"
        android:layout_width="150sp"
        android:layout_height="50sp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="nazwa"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.773"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView33" />

    <EditText
        android:id="@+id/et_dialog_weglowodany"
        android:layout_width="150sp"
        android:layout_height="50sp"
        android:layout_marginTop="40dp"
        android:digits="0123456789."
        android:ems="10"
        android:hint="węglowodany"
        android:inputType="number"
        android:maxLength="4"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.777"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_dialog_nazwa" />

    <EditText
        android:id="@+id/et_dialog_bialko"
        android:layout_width="150sp"
        android:layout_height="50sp"
        android:layout_marginTop="40dp"
        android:digits="0123456789."
        android:ems="10"
        android:hint="białko"
        android:inputType="number"
        android:maxLength="4"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.773"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_dialog_weglowodany" />

    <EditText
        android:id="@+id/et_dialog_tluszcz"
        android:layout_width="150sp"
        android:layout_height="50sp"
        android:layout_marginTop="40dp"
        android:digits="0123456789."
        android:ems="10"
        android:hint="tłuszcz"
        android:inputType="number"
        android:maxLength="4"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.773"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_dialog_bialko" />

    <EditText
        android:id="@+id/et_dialog_waga"
        android:layout_width="150sp"
        android:layout_height="50sp"
        android:layout_marginTop="40dp"
        android:digits="0123456789."
        android:ems="10"
        android:hint="waga porcji"
        android:inputType="number"
        android:maxLength="4"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.773"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_dialog_tluszcz" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="134dp"
        android:layout_height="50sp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="Nazwa"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/et_dialog_nazwa"
        app:layout_constraintHorizontal_bias="0.083"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView33" />

    <TextView
        android:id="@+id/textView33"
        android:layout_width="209dp"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="Podaj wartości odżywcze produktu w 100g "
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.539"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView35"
        android:layout_width="134dp"
        android:layout_height="50sp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="Waga produktu"
        android:textSize="18sp"

        app:layout_constraintEnd_toStartOf="@+id/et_dialog_waga"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView36" />

    <TextView
        android:id="@+id/textView36"
        android:layout_width="134dp"
        android:layout_height="50sp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="Tłuszcz"
        android:textSize="18sp"

        app:layout_constraintEnd_toStartOf="@+id/et_dialog_tluszcz"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView39" />

    <TextView
        android:id="@+id/textView39"
        android:layout_width="134dp"
        android:layout_height="50sp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="Białko"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/et_dialog_bialko"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView38" />


    <TextView
        android:id="@+id/textView38"
        android:layout_width="134dp"
        android:layout_height="50sp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="Węglowodany"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/et_dialog_weglowodany"
        app:layout_constraintHorizontal_bias="0.243"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/btn_produkt_dalej"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="30dp"
        android:text="Dalej"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_dialog_waga"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_produkt_cofnij"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="44dp"
        android:text="Cofnij"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_produkt_dalej"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView35"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>